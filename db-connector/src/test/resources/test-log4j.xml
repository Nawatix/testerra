<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
    <!-- Appender that writes all log messages in the html test report, when
        they are logged while a test runs. -->
    <appender name="TestReportAppender"
              class="eu.tsystems.mms.tic.testframework.report.FennecLogger">
    </appender>
    <!-- Normal file appender to compare behaviour of the FennecLogger. -->
    <appender name="file" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="target/log4j.log" />
        <param name="MaxFileSize" value="100KB" />
        <!-- Keep one backup file -->
        <param name="MaxBackupIndex" value="1" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %c{2} - %m%n" />
        </layout>
    </appender>
    <!-- Console appender for the rest. -->
    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{dd.MM.yyyy HH:mm:ss} [%t] [%-5p]: %c{2} - %m%n" />
        </layout>
    </appender>

    <root>
        <!--<level value="DEBUG" />-->
        <level value="INFO" />
        <appender-ref ref="console" />
        <appender-ref ref="TestReportAppender" />
    </root>
</log4j:configuration>