<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Testerra Core Test Suite" verbose="10" configfailurepolicy="continue" thread-count="10" parallel="false">

    <test name="Core Tests parallel" parallel="methods">
        <groups>
            <run>
                <exclude name="SEQUENTIAL"/>
            </run>
        </groups>
        <packages>
            <package name="eu.tsystems.mms.tic.testframework.core.test.common"/>
            <package name="eu.tsystems.mms.tic.testframework.core.test.testdata"/>
        </packages>
        <classes>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.AssertUtilsTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.FileUtilsTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.NumberUtilsTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.PdfUtilsTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.RandomUtilsTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.StringUtilsTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.XMLUtilsTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.XMLUtilsJDOMTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.XMLUtilsJDOMNodeTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.XMLUtilsJDOMAttributeTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.FileDownloaderTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.utils.DragAndDropJSTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.sikuli.SikuliBasedWebTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.common.Java8Test"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.reporting.MethodContextTest"/>
            <class name="eu.tsystems.mms.tic.testframework.core.test.l10n.SimpleLocalizationTest"/>
        </classes>
    </test>

    <suite-files>
        <suite-file path="GuiElementStandard.xml"></suite-file>
        <suite-file path="GuiElementVariations.xml"></suite-file>
        <suite-file path="PageObjects.xml"></suite-file>
    </suite-files>

    <test name="Events" parallel="methods">
        <packages>
            <package name="eu.tsystems.mms.tic.testframework.core.test.shotList"/>
        </packages>
    </test>
</suite>
